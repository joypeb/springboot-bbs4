{{>layouts/header}}

<form action="/hospitals" method="get">
    지역: <input type="text" name="keyword" />
    <input type="submit" />
</form>
<div>
    <table>
        <thead>
        <tr>
            <th>id</th>
            <th>병원이름</th>
            <th>주소</th>
        </tr>
        </thead>
        <tbody>
        {{#hospitalList}}
            <tr>
                <td>{{id}}</td>
                <td>{{hospitalName}}</td>
                <td>{{roadNameAddress}}</td>
            </tr>
        {{/hospitalList}}
        </tbody>
    </table>
</div>
<nav aria-label="Page navigation example">
    <ul class="pagination">
        {{#hasPrevious}}
            <li class="page-item"><a class="page-link" href='?page={{previous}}&city={{city}}'>Previous</a></li>
        {{/hasPrevious}}
        {{^hasPrevious}}
            <li class="page-item disabled"><a class="page-link" href='?page={{previous}}&city={{city}}'>Previous</a></li>
        {{/hasPrevious}}
        {{#hasNext}}
            <li class="page-item"><a class="page-link" href='?page={{next}}&city={{city}}'>Next</a></li>
        {{/hasNext}}
        {{^hasNext}}
            <li class="page-item disabled"><a class="page-link" href='?page={{next}}&city={{city}}'>Next</a></li>
        {{/hasNext}}
    </ul>
</nav>
{{>layouts/footer}}